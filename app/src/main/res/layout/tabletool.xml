<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.PocketManager.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PocketManager.AppWidgetContainer">



    <Button
        android:id="@+id/appwidget_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收入"
        android:textColor="@color/blue"/>

    <Button
        android:id="@+id/appwidget_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:text="支出"
        android:textColor="@color/red"/>
    <Button
        android:id="@+id/appwidget_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:text="總額"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/appwidget_text"
        android:text="本日"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/appwidget_text_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:text="10000"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="@color/blue"/>
    <TextView
        android:id="@+id/appwidget_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/appwidget_text"
        android:text="本月"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="@color/blue"/>
    <TextView
        android:id="@+id/appwidget_text2_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginTop="50dp"
        android:text="12345"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="@color/blue"/>
</RelativeLayout>